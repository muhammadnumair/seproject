@using uetquizing.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout_Backend.cshtml";
    ViewBag.Title = "Log in";
}

<body class="d-flex align-items-center bg-auth border-top border-top-2 border-primary">

    <!-- CONTENT
    ================================================== -->
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6 offset-xl-2 offset-md-1 order-md-2 mb-5 mb-md-0">

                <!-- Image -->
                <div class="text-center">
                    <img src="~/assets/img/illustrations/happiness.svg" alt="..." class="img-fluid">
                </div>

            </div>
            <div class="col-12 col-md-5 col-xl-4 order-md-1 my-5">

                <!-- Heading -->
                <h1 class="display-4 text-center mb-3">
                    Sign in
                </h1>

                <!-- Subheading -->
                <p class="text-muted text-center mb-5">
                    Free access to our dashboard.
                </p>

                <!-- Form -->
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <!-- Email address -->
                    <div class="form-group">
                        <!-- Label -->
                        @Html.LabelFor(m => m.Email)
                        <!-- Input -->
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "name@address.com" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <!-- Label -->
                                <label>Password</label>
                            </div>
                            <div class="col-auto">
                                <!-- Help text -->
                                <a href="password-reset-illustration.html" class="form-text small text-muted">
                                    Forgot password?
                                </a>
                            </div>
                        </div> <!-- / .row -->
                        <!-- Input -->
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-appended", placeholder = "Enter your password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <!-- Submit -->
                    <button class="btn btn-lg btn-block btn-primary mb-3">
                        Sign in
                    </button>

                    <!-- Link -->
                    <div class="text-center">
                        <small class="text-muted text-center">
                            Don't have an account yet? <a href="/Account/Register">Sign up</a>.
                        </small>
                    </div>

                }

            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
    

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
